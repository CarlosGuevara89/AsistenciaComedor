@model AsistenciaComedor.Data.Entities.Nivel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<h4>Nivel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="nombreNivel" class="control-label"></label>
                <input asp-for="nombreNivel" class="form-control" />
                <span asp-validation-for="nombreNivel" class="tlabel label-danger"></span>
            </div>
            <div class="form-group">
                <label for="mySubmit" class="btn btn-default"><i class="glyphicon glyphicon-floppy-disk"></i> Guardar</label>
                <input id="mySubmit" type="submit" value="Guardar" class="hidden" />
                <a asp-action="Index" class="btn btn-success"><i class="glyphicon glyphicon-arrow-left"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>



