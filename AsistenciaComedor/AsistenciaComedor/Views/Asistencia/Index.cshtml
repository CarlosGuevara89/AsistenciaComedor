@model IEnumerable<AsistenciaComedor.Data.Entities.Estudiante>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" />
<br />
<div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <h2 class="lead">Seleccione una fecha para pasar asistencia: </h2>
                <div class="input-group date" id="mydatetimepicker">
                    <input type="text" class="form-control" id="fecha" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Estudiantes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreCompleto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nivel)
                            </th>
                            <th>Control asistencia</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreCompleto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nivel.nombreNivel)
                                </td>
                                <td>
                                    <button data-id="@item.Id" name="Id" class="btn btn-success asistencia">Presente</button>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if(ViewBag.mensaje != null)
{
    <partial name="_ErrorDialog" />
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myModal').modal('show')
        });
    </script>
}