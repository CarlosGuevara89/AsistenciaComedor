@model AsistenciaComedor.Models.EstudianteViewModel

@{
    ViewData["Title"] = "Editar datos de estudiante";
}

<h2>Editar</h2>

<h4>Datos de estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEstudiante">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <partial name="_Estudiante" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>
